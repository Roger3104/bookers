<h1>Books</h1>
<table>
  <tr>
    <th>title</th>
    <th>body</th>
    <td colspan="3"></td>　<!--右３つのセルを結合-->
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
  </tr>
  <% end %>
</table>
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'create book' %>
<% end %>