<h1>Books</h1>
<table>
  <tr>
    <th>title</th>
    <th>body</th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title%></td>
    <td><%= book.body%></td>
    <td></td>
  </tr>
  <% end %>
</table>
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'create book' %>
<% end %>